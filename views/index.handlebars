<h2>Eat Dem Burgers!!!!</h2>

<div class="container">
  <div class="row">
    <div class="col">
      <ul>
        {{#each burger}}
        {{#unless devoured}}
        <li>
          {{burger_name}}
          <button class="eatBurger" data-id="{{id}}" data-devoured="{{devoured}}">
            EAT ME!
          </button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col">
      <ul>
        {{#each burger}}
        {{#if devoured}}
        <li>
          {{burger_name}}
          <p>I have been eaten!</p>
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>


<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bn">Burger Name:</label>
    <input type="text" id="bn" name="name">
  </div>

  <button type="submit">Make Burger</button>
</form>